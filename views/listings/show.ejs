 <%-layout('layouts/boilerplate') %>
 <div class="row">
  <div class="col-8 offset-2 mt-3">
    <h3><%= listing.title %></h3>
    <div class="card">
      <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text"><br><%= listing.description %><br>  &#8377 <%= listing.price.toLocaleString("en-IN") %><br> <%= listing.location %> <br> <%= listing.country %> <br> <%= listing.location %> <br>
        </p>
      </div>
    </div>
     
        <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-button">Edit</a>

    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" >
      <button class="btn btn-dark">Delete</button>
    </form>
       
    </div>
    <div class="col-8 offset-2 mb-3">
      <hr>
      <h4>Leave a Review</h4>
      <form method="POST" action="/listings/<%=listing._id%>/reviews" class="needs-validation" novalidate> 
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea name="review[comment]" required  class="form-control " id="comment" cols="30" rows="5"></textarea>
          <div class="invalid-feedback">Please add some comments for review</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
     </div>
    <!-- <a href="/listings">Back to Listings</a> -->

</div> 
 </div>